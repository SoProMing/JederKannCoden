<Window x:Class="WpfFe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfFe"
        mc:Ignorable="d"
        Title="Wpf Frontend" Height="350" Width="600">
        <TabControl>
            <TabItem Header="WeatherForecast">
                <Grid>
                    <DataGrid x:Name="WeatherGrid" AutoGenerateColumns="True" />
                </Grid>
            </TabItem>
            <TabItem Header="Game">
                <Grid>
                    <DataGrid x:Name="PlayerGrid" AutoGenerateColumns="True" />
                </Grid>
        </TabItem>
        </TabControl>
</Window>
